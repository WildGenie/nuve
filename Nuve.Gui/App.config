<?xml version="1.0" encoding="utf-8"?>

<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0" />
  </startup>
  <system.diagnostics>
    <sharedListeners>
      <add name="myListener" type="System.Diagnostics.ConsoleTraceListener" />
    </sharedListeners>
    <sources>
      <source name="LanguageReader" switchValue="All">
        <listeners>
          <clear />
          <add name="myListener" />
        </listeners>
      </source>
      
      <source name="DictionaryGraph">
        <listeners>
          <clear />
          <add name="myListener" />
        </listeners>
      </source>

      <source name="WordAnalyzer" switchValue="Information">
        <listeners>
          <clear />
          <add name="myListener" />
        </listeners>
      </source>
    </sources>
  </system.diagnostics>
</configuration>